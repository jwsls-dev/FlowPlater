{
  "name": "flowplater",
  "version": "1.5.0",
  "homepage": "https://flowplater.io",
  "main": "dist/flowplater.min.js",
  "scripts": {
    "rollup": "rollup -c",
    "update-license": "node update-license.js",
    "concat": "node concatenate.js",
    "minify": "uglifyjs dist/flowplater_bundled.js -o dist/flowplater.min.js -c passes=2,pure_getters=true,dead_code=true,unused=true,sequences=true,conditionals=true,comparisons=true,booleans=true,loops=true,hoist_funs=true,if_return=true,join_vars=true -m keep_fnames=true --comments /preserve/",
    "prod": "uglifyjs dist/flowplater_bundled.js -o dist/flowplater.js -b -c drop_console=false -m --comments /preserve/",
    "build": "npm run update-license && npm run rollup && npm run concat && npm run minify && npm run prod",
    "analyze": "node analyze-bundle.js",
    "buildPlugin": "node build-plugin.js",
    "buildPlugins": "node build-plugins.js"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.5",
    "@rollup/plugin-node-resolve": "^15.3.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/node": "^24.0.3",
    "rollup": "^3.29.5",
    "typescript": "^5.8.3",
    "uglify-js": "^3.17.4"
  },
  "maintainers": [
    {
      "name": "Jan-Willem Wessels",
      "email": "jan@flowplater.io",
      "web": "https://flowplater.io"
    }
  ],
  "license": "Flowplater standard licence",
  "dependencies": {
    "currency.js": "^2.0.4",
    "handlebars": "^4.7.8",
    "htmx.org": "^2.0.4",
    "numbro": "^2.5.0"
  }
}
